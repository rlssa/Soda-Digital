@page
@{
    ViewData["Title"] = "Login Successful";
    Layout = "_LayoutLogin";
}

<div class="login success">
    <div class="space-separator--lg"></div>
    <div class="space-separator"></div>
    <div class="page-container-sm">
        <div class="login-container">
            <div>
                <div class="space-separator--lg"></div>
                <div class="space-separator--lg"></div>
                <div class="space-separator--md"></div>
            </div>
            <div class="form large">
              <div class="space-separator--lg"></div>
              <div class="d-flex align-items-center justify-content-center">
                <div class="icon icon-initial icon-success">
                  <icon icon="Confirm"></icon>
              </div>
              </div>
              <div class="text-width">
                <h3 class="text-primary text-center pt-4">We've sent an email to your email address.</h3>
                <h6 class="success-subtitle text-center py-4">Click the LOGIN button contained in this email to access your eBook(s).</h6>

                <p class="success-desc">If you do not receive this email, or are having issues accessing your eBook(s), please contact <a href="mailto:helpdesk@rlssa.org.au">helpdesk@rlssa.org.au</a></p>
              </div>
              <div class="space-separator--lg"></div>
           </div>
        </div>
    </div>
    <div class="wave-spacer">
        <img src="/images/bg-login.png" alt="">
    </div>
</div>